{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "turbo run test --no-cache",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install",
      "type": "shell",
      "command": "go mod tidy",
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "docker build -t mxy680/meco-base:latest -f jupyter/Dockerfile . && docker push mxy680/meco-base:latest",
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Dev",
      "type": "shell",
      "command": "pnpm dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Migrate",
      "type": "shell",
      "command": "pnpm exec prisma migrate dev && pnpm exec prisma generate",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Reset",
      "type": "shell",
      "command": "pnpm exec prisma migrate reset --force",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "problemMatcher": []
    },
    {
      "label": "Studio",
      "type": "shell",
      "command": "pnpm exec prisma studio",
      "options": {
        "cwd": "${workspaceFolder}/apps/web"
      },
      "problemMatcher": []
    }
  ]
}
